<section class="vh-100" style="background-color: #0048ce;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form action="/../admin/login" method="post">
                            <h3 class="mb-5">Inicia Session</h3>

                            <div class="form-outline mb-4">
                                <input type="text" id="usuario" class="form-control form-control-lg" />
                                <label class="form-label" for="usuario" name="usuario">Usuario</label>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" id="password" class="form-control form-control-lg" />
                                <label class="form-label" for="password" name="password">Password</label>
                            </div>



                            <button class="btn btn-primary btn-lg btn-block" type="submit">Iniciar</button>

                            <hr class="my-4">
                        </form>
                        {{#if error}}
                        <p>¡Usuario o contraseña incorrecta!</p>
                        {{#if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
