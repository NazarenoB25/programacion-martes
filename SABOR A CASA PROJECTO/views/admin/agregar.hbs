<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/from-data">

                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo"></input>

                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>

                
                <div class="form-group">
                    <label> Imagen: <input type="file"  class="form-control" name="imagen" id="imagen"  /> </label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>

            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>

</div>